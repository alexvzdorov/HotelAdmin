<Page x:Class="HotelAdmin.Pages.ReserveManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelAdmin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ReserveManagementPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Padding="3" Margin="3,3,0,3" HorizontalAlignment="Left" Click="Button_Click">Назад</Button>
            <Button Padding="3" Margin="3,3,0,3" HorizontalAlignment="Left" Click="Button_Click_2">Сохранить</Button>

        </StackPanel>
        <DataGrid Grid.Row="1" Name="dataGrid"/>

    </Grid>
</Page>
